@{
	ViewData["Title"] = "Student List";
}

@model List<StudentPortal.Models.Entities.Students>

<h1>Student List</h1>


@if (Model.Count == 0)
{
	<p>No Students enrolled.</p>
}
else
{
    <table class="table table-responsive table-bordered table-light shadow-lg mt-3">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Course</th>
                <th scope="col">Year</th>
                <th scope="col">Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                var name = student.StudLName + ", " + student.StudFName;
                if (student.StudMName is not null)
                {
                    name += " " + student.StudMName?.ToString().ElementAt(0) + ".";
                }
                <tr>
                    <th scope="row">@student.StudID</th>
                    <td>@name</td>
                    <td>@student.StudCourse</td>
                    <td>@student.StudYear</td>
                    <td>@student.StudRemarks</td>
                </tr>
            }
        </tbody>
    </table>
}