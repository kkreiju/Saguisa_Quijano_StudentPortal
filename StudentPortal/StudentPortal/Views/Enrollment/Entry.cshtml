@{
	ViewData["Title"] = "Enrollment Entry";
}

@model StudentPortal.Models.Entities.Students

<h1>Student Information</h1>

<div class="mt-3">
	<form method="post" id="form">
		<label class="form-label">ID Number</label>
		<input type="text" class="form-control" id="idnumber" required />
		<button type="submit" class="btn btn-primary mt-2">Search</button>
	</form>

	@if (ViewBag.Message != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewBag.Message
        </div>
    }

	@if (Model != null)
	{
		<div class="mt-3">
			<h3>Student Details:</h3>
			<p><strong>ID:</strong> @Model.StudID</p>
			<p><strong>Name:</strong> @Model.StudFName @Model.StudLName</p>
			<p><strong>Course:</strong> @Model.StudCourse</p>
			<p><strong>Year:</strong> @Model.StudYear</p>
		</div>
	}
</div>

<div>
	<fieldset>
		<label class="form-label mt-3" for="readOnlyInput">Name</label>
		<input class="form-control" id="name" type="text" placeholder="Name" readonly="">
	</fieldset>
</div>

<div>
	<fieldset>
		<label class="form-label mt-3" for="readOnlyInput">Course</label>
		<input class="form-control" id="course" type="text" placeholder="Course" readonly="">
	</fieldset>
</div>

<div>
	<fieldset>
		<label class="form-label mt-3" for="readOnlyInput">Year</label>
		<input class="form-control" id="year" type="text" placeholder="Year" readonly="">
	</fieldset>
</div>

